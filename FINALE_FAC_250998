    {
      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "import pandas as pd\n",
        "import yfinance as yf\n",
        "\n",
        "data = yf.download(\"TCS.NS\", start=\"2023-01-01\", end=\"2023-12-31\", interval=\"1d\", auto_adjust=True)\n",
        "data = data.reset_index()\n",
        "data[\"Close\"] = data[\"Close\"].astype(float)\n",
        "\n",
        "def add_ema(data, period):\n",
        "    data[f\"EMA_{period}\"] = data[\"Close\"].ewm(span=period, adjust=False).mean()\n",
        "    return data\n",
        "\n",
        "def add_rsi(data, period=14):\n",
        "    delta = data[\"Close\"].diff()\n",
        "    gain = delta.clip(lower=0)\n",
        "    loss = (-delta).clip(lower=0)\n",
        "    avg_gain = gain.rolling(period).mean()\n",
        "    avg_loss = loss.rolling(period).mean()\n",
        "    rs = avg_gain / avg_loss\n",
        "    data[\"RSI\"] = 100 - (100 / (1 + rs))\n",
        "    return data\n",
        "\n",
        "def generate_strategy(data):\n",
        "    data = add_ema(data, 20)\n",
        "    data = add_ema(data, 50)\n",
        "    data = add_rsi(data, 14)\n",
        "    data[\"Signal\"] = 0\n",
        "    # Long: EMA20>EMA50 & RSI<30\n",
        "    data.loc[(data[\"EMA_20\"] > data[\"EMA_50\"]) & (data[\"RSI\"] < 30), \"Signal\"] = 1\n",
        "    # Short: EMA20<EMA50 & RSI>70\n",
        "    data.loc[(data[\"EMA_20\"] < data[\"EMA_50\"]) & (data[\"RSI\"] > 70), \"Signal\"] = -1\n",
        "    return data\n",
        "\n",
        "def backtest_engine(data, signal):\n",
        "    capital = 100000\n",
        "    initial_capital = capital\n",
        "    stop_loss_pct = 0.03\n",
        "    take_profit_pct = 0.06\n",
        "\n",
        "    position = 0\n",
        "    entry_price = 0.0\n",
        "    trailing_stop = 0.0\n",
        "    trailing_target = 0.0\n",
        "    equity_curve = []\n",
        "    total_trades = 0\n",
        "    winning_trades = 0\n",
        "    losing_trades = 0\n",
        "\n",
        "    for i in range(len(data)):\n",
        "        price = float(data[\"Close\"].iloc[i])\n",
        "        sig = int(signal.iloc[i])\n",
        "\n",
        "        if position == 0:  # enter new trade\n",
        "            if sig == 1:\n",
        "                qty = int(capital // price)\n",
        "                if qty > 0:\n",
        "                    position = qty\n",
        "                    entry_price = price\n",
        "                    capital -= qty*price\n",
        "                    trailing_stop = price * (1 - stop_loss_pct)\n",
        "                    trailing_target = price * (1 + take_profit_pct)\n",
        "                    total_trades += 1\n",
        "            elif sig == -1:\n",
        "                qty = int(capital // price)\n",
        "                if qty > 0:\n",
        "                    position = -qty\n",
        "                    entry_price = price\n",
        "                    trailing_stop = price * (1 + stop_loss_pct)\n",
        "                    trailing_target = price * (1 - take_profit_pct)\n",
        "                    total_trades += 1\n",
        "\n",
        "        elif position > 0:  # long\n",
        "            trailing_stop = max(trailing_stop, price*(1-stop_loss_pct))\n",
        "            trailing_target = max(trailing_target, price*(1+take_profit_pct))\n",
        "            if price <= trailing_stop or price >= trailing_target:\n",
        "                pnl = position*(price - entry_price)\n",
        "                capital += position*price\n",
        "                if pnl > 0: winning_trades += 1\n",
        "                else: losing_trades += 1\n",
        "                position = 0\n",
        "\n",
        "        elif position < 0:  # short\n",
        "            trailing_stop = min(trailing_stop, price*(1+stop_loss_pct))\n",
        "            trailing_target = min(trailing_target, price*(1-take_profit_pct))\n",
        "            if price >= trailing_stop or price <= trailing_target:\n",
        "                pnl = -position*(entry_price - price)\n",
        "                capital += -position*entry_price + pnl\n",
        "                if pnl > 0: winning_trades += 1\n",
        "                else: losing_trades += 1\n",
        "                position = 0\n",
        "\n",
        "        equity = capital + (position*price if position != 0 else 0)\n",
        "        equity_curve.append(equity)\n",
        "\n",
        "    if position != 0:  # close any open trade\n",
        "        if position > 0:\n",
        "            pnl = position*(price - entry_price)\n",
        "            capital += position*price\n",
        "        else:\n",
        "            pnl = -position*(entry_price - price)\n",
        "            capital += -position*entry_price + pnl\n",
        "        if pnl > 0: winning_trades += 1\n",
        "        else: losing_trades += 1\n",
        "\n",
        "    equity_curve = np.array(equity_curve)\n",
        "    net_profit = capital - initial_capital\n",
        "    returns = np.diff(equity_curve)/equity_curve[:-1]\n",
        "    sharpe_ratio = (returns.mean()/returns.std()*np.sqrt(252)) if returns.std() != 0 else 0\n",
        "    running_max = np.maximum.accumulate(equity_curve)\n",
        "    drawdown = (equity_curve - running_max)/running_max\n",
        "    max_drawdown = drawdown.min()*100\n",
        "\n",
        "    print(\"Net Profit:\", round(net_profit,2))\n",
        "    print(\"Sharpe Ratio:\", round(sharpe_ratio,2))\n",
        "    print(\"Max Drawdown (%):\", round(max_drawdown,2))\n",
        "    print(\"Total Trades:\", total_trades)\n",
        "    print(\"Winning Trades:\", winning_trades)\n",
        "    print(\"Losing Trades:\", losing_trades)\n",
        "\n",
        "\n"
      ],
